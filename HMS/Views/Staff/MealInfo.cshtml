@model IEnumerable<HMS.Models.MealIinfo>
@{
    ViewBag.Title = "CalGro";
    Layout = "~/Views/Shared/_Staff_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
    <title>MealInfo</title>
</head>
<body>
    <div>
        <table>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Member_ID
                </th>
                <th>
                    Lunch
                </th>
                <th>
                    Dinner
                </th>
                <th>
                    Breakfast
                </th>

            </tr>
        @{foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Member_ID
                        </td>
                        <td>
                            @item.Lunch
                        </td>
                        <td>
                            @item.Dinner
                        </td>
                        <td>
                            @item.breakfast
                        </td>                     
                    </tr>
             }
           
            }
    </table>
    </div>
</body>
</html>
