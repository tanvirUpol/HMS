@model HMS.Models.MemberBill
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MemberBill</title>
</head>
<body>


    <div>

        <table align="right">
            <tr>
                <td><a href="/Home/logout"><input type="button" name="mLogut" value="Logout" /></a></td>
                <td><a href="/Member/Index"><input type="button" name="mProfile" value="Profile" /></a></td>
            </tr>
        </table>





    </div>

    <div>

        <form action="/Member/MemberBill" method="post">

            <table align="center">
                <tr>

                    <td colspan="3">Pay here you Payment </td>
                </tr>
                <tr>
                    <td>Amount</td>
                    <td><input type="text" name="Amount" value="" /></td>
                    <td>@Html.ValidationMessage("Amount")</td>
                </tr>

                <tr>
                    <td>Payment_Method</td>
                    <td>
                        <input type="radio" name="Payment_Method" value="Bikash"><b>Bkash</b>

                        <input type="radio" name="Payment_Method" value="Nogod"><b>Nogod</b>
                        <input type="radio" name="Payment_Method" value="Rocket"><b>Rocket</b>

                    </td>
                    <td>@Html.ValidationMessage("Payment_Method")</td>
                </tr>

                <tr>

                    <td colspan="3"><input type="submit" name="submit" value="submit"> </td>
                </tr>


            </table>
        </form>

    </div>


</body>
</html>
