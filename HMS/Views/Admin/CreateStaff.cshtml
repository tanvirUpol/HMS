
@{
    ViewBag.Title = "CreateStaff";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}


<div class="admin-form">

    <h2 style="text-align:center">Create Staff</h2>
    <br />
    <br />

    <form action="/Admin/CreateStaff" method="post">

        <div class="form-container">
            <div class="form-control">
                <label for="Name">Name</label>
                <input id="Name" name="Name" type="text" value="" />
            </div>
            @Html.ValidationMessage("Name")
            <div class="form-control">
                <label for="Age">Age</label>
                <input id="Age" name="Age" type="number" value="" />
            </div>
            @Html.ValidationMessage("Age")

            <div class="form-control">
                <label>Gender</label>
                <br />

                <p style="display: inline" for="Gender">Male</p>
                <input type="radio" name="Gender" value="male">
                <p style="display: inline; margin-left: 10px;" for="Gender">Female</p>
                <input type="radio" name="Gender" value="female">

            </div>
            @Html.ValidationMessage("Gender")

            <div class="form-control">
                <label for="Address">Address</label>
                <input id="Address" name="Address" type="text" value="" />

            </div>
            @Html.ValidationMessage("Address")

            <div class="form-control">
                <label for="Phone">Phone</label>
                <input id="Phone" name="Phone" type="text" value="" />

            </div>
            @Html.ValidationMessage("Phone")



            <div class="form-control">
                <label for="Password">Password</label>
                <input id="Password" name="Password" type="text" value="" />
            </div>
            @Html.ValidationMessage("Password")
            <input class="btn" type="submit" value="Create" />
        </div>


    </form>

</div>
