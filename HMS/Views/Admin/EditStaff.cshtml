@model HMS.Models.Staff

@{
    ViewBag.Title = "EditStaff";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<h2 style="text-align:center">Edit Staff</h2>
<div class="admin-form">

    <form action="/Admin/EditStaff" method="post">


        <div class="form-container">


            <div class="form-control">
                <label for="Id">ID</label>
                <input id="Id" name="Id" type="text" value="@Model.Id" readonly />
            </div>

            <div class="form-control">
                <label for="Name">Name</label>
                <input id="Name" name="Name" type="text" value="@Model.Name" />
            </div>

            <div class="form-control">
                <label for="Age">Age</label>
                <input id="Age" name="Age" type="number" value="@Model.Age" />
            </div>

            <div class="form-control">
                <label>Gender</label>
                <br />
                <select name="Gender" id="Gender">
                    <option value="Male" selected>Male</option>
                    <option value="Female">Female </option>
                </select>


            </div>

            <div class="form-control">
                <label for="Address">Address</label>
                <input id="Address" name="Address" type="text" value="@Model.Address" />

            </div>

            <div class="form-control">
                <label for="Phone">Phone</label>
                <input id="Phone" name="Phone" type="text" value="@Model.Phone" />

            </div>



            @*<div class="form-control">
                <label for="Password">Password</label>
                <input id="Password" name="Password" type="text" value="@Model.Password" />
            </div>*@
            <input class="btn" type="submit" value="Create" />
        </div>


    </form>

</div>